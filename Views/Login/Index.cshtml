
@{
    ViewBag.Title = "Login Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
     body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
    .login-form {
        margin-top: 30px;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .login-form label {
        font-weight: bold;
    }

    .login-form button[type="submit"] {
        margin-top: 20px;
    }
</style>

<h2 style="color:darkred">Trang Đăng Nhập Admin</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            @if (ViewBag.ErrMess != null)
            {
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Lỗi! </strong>@ViewBag.ErrMess
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="@Url.Action("Login","Login")" method="post" id="frmLogin">
                <div class="form-group">
                    <label for="_user">Tên Đăng Nhập</label>
                    <input type="text" class="form-control" id="_user" name="TenTK" placeholder="Tên Tài Khoản">
                </div>
                <div class="form-group">
                    <label for="_PWD">Password</label>
                    <input type="password" class="form-control" id="_PWD" name="TenMK" placeholder="Nhập Password">
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="Remember">
                    <label class="form-check-label" for="rememberMe">Ghi nhớ mật khẩu</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Đăng Nhập</button>
            </form>
        </div>
    </div>
</div>
